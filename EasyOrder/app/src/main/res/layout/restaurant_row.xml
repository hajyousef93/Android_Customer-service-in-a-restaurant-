<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ImageView"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/resturant_name"
            android:text="some really long name"
            android:textAlignment="viewEnd"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/resturant_address"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/ImageView"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resturant_address"
            android:text="some place in aleppo"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#808080"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textAlignment="viewEnd"
            app:layout_constraintTop_toBottomOf="@id/ImageView"
            />
        <RatingBar
            android:id="@+id/restuarant_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/resturant_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            style="@style/Widget.AppCompat.RatingBar.Indicator"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>