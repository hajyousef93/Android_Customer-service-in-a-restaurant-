<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="#59E6E6E6"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#48E6E6E6"

        >

        <RelativeLayout
            android:id="@+id/Cooker_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#40E6E6E6"
            >

            <CheckBox
                android:id="@+id/done"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="5dp"
                android:gravity="center_vertical|start"
                android:layout_toLeftOf="@+id/quantity"
                android:layout_marginEnd="23dp" />

            <TextView
                android:id="@+id/Meal_name"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/done"
                android:layout_marginStart="27dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Order_id"
                android:ellipsize="end"
                android:fontFamily="@font/italics"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:text="Meal name "
                android:textAllCaps="true"
                android:textColor="@color/itemname"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical|start"
                android:text="0000000"
                android:paddingTop="5dp"
                android:textAllCaps="true"
                android:textColor="@color/itemname"
                android:textSize="17sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/quantity"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:gravity="center_vertical|start"
                android:layout_above="@+id/Meal_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="115dp"
                android:layout_marginBottom="-24dp"
                android:layout_toLeftOf="@+id/Meal_name"
                android:paddingTop="5dp" />

        </RelativeLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>