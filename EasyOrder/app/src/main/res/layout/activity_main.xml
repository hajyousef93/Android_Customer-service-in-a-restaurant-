<android.support.v7.widget.LinearLayoutCompat android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/backgroundblur"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:padding="16dp"
            android:src="@drawable/logo2"
            app:civ_border_color="#22000000" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:autofillHints=""
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_man_user"
            android:drawablePadding="12dp"
            android:ems="10"
            android:textSize="20dp"
            android:fontFamily="@font/italics"
            android:hint="اسم المستخدم"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:text="memo_sraj"
            android:textColor="#fff"
            android:textColorHint="#fff" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_lock_1"
            android:drawablePadding="12dp"
            android:ems="10"
            android:textSize="20dp"
            android:fontFamily="@font/italics"
            android:hint="كلمة السر "
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="8dp"
            android:text="123456789"
            android:textColor="#ffffff"
            android:textColorHint="#fff" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"/>

        <Button
            android:id="@+id/signin"
            android:text="تسجيل الدخول"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginn"
            android:textAllCaps="false"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/italics"
            android:clickable="true"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/signup"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/loginn"
            android:clickable="true"
            android:fontFamily="@font/italics"
            android:padding="10dp"
            android:text="إنشاء حساب"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>
    </ScrollView>
</android.support.v7.widget.LinearLayoutCompat>