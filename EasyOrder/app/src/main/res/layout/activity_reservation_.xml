<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reserv"
    tools:context=".User.Activity.Reservation_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/italics"
            android:padding="8dp"
            android:layoutDirection="rtl"
            android:textSize="20dp"
            android:textDirection="rtl"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="الرجاء إختيار نوع حجز واحد فقط :"
            android:textColor="#ffff" />

        <CheckBox
            android:id="@+id/takeaway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:background="@android:color/transparent"
            android:layoutDirection="rtl"
            android:padding="8dp"
            android:text="طلب خارجي"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textDirection="rtl" />

        <CheckBox
            android:id="@+id/reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:text="حجز طاولة مسبقاً"
            android:textColor="#ffff" />
        <CheckBox
            android:id="@+id/OnTheRestaurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="حجز طاولة مباشرة"
            android:textColor="#ffff" />

        <EditText
            android:id="@+id/numerOfpeople_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_multiple_users_silhouette"
            android:drawablePadding="12dp"
            android:ems="10"
            android:layoutDirection="rtl"
            android:layout_gravity="right"
            android:gravity="right"
        android:textSize="20dp"
            android:textDirection="rtl"
            android:fontFamily="@font/italics"
            android:hint="عدد الأشخاص"
            android:inputType="number"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <TextView
            android:id="@+id/DateOfReservation_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="12dp"
            android:ems="10"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:fontFamily="@font/italics"
            android:hint="تاريخ الحجز"
            android:inputType="date"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <TextView
            android:id="@+id/TimeOfReservation_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="12dp"
            android:ems="10"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:fontFamily="@font/italics"
            android:hint="وقت الحجز"
            android:inputType="time"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/Submit"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/loginn"
            android:clickable="true"
            android:fontFamily="@font/italics"
            android:padding="16dp"
            android:text="تأكيد"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>