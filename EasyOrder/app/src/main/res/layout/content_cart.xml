<?xml version="1.0" encoding="utf-8"?>
<FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_background"
    android:background="@color/bkgroundrow">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/deleteItem"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_delete_black_24dp"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Delete"
        android:layout_toLeftOf="@id/deleteItem"
        android:textColor="@android:color/white"
        android:textSize="13sp"/>
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/id_thumbnail"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/id_thumbnail"
            android:ellipsize="end"
            android:fontFamily="@font/italics"
            android:maxLines="1"
            android:textColor="@color/itemname"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:id="@+id/desc"
            android:layout_toRightOf="@+id/id_thumbnail"
            android:textColor="@color/itemname"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/name"
            android:id="@+id/price"
            android:textColor="@color/itemname"
            android:textSize="17sp"/>
    </RelativeLayout>
</FrameLayout>